@model CroppShop.Models.AdditionalModel.IdentityViewModel

<div style="padding:300px 15px;">
    <div class="container">
        <div class="col">
            <h4>Уже зарегистрировани?</h4>
            <div class="btn-login">
                <button onclick="myFunction()" id="log-but" style="display:none">Войти</button>
            </div>
            <div id="login-form">
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="input1">
                        <div class="form-group">
                            <input asp-for="LoginViewModel.Email" class="form-control" placeholder="Email" required/>
                        </div>
                        <div class="login-show-pass">
                            <input type="password" asp-for="LoginViewModel.Password" class="form-control" placeholder="Password" id="pass1" required minlength="6"/>
                            <i class="fa fa-eye showpwd" onClick="showPwd('pass1', this)">   </i>
                        </div>
                        <input type="submit" value="Войти" />
                    </div>
                </form>
                <div class="forget-text">
                    <button onclick="document.getElementById('forgot-pass').style.display='block'">
                        <p>Я забув (-ла) свій пароль</p>
                    </button>
                </div>
            </div>
        </div>
        <div class="col">
            <h4>Вы здесь первый раз?</h4>
            <div class="btn-regis">
                <button onclick="myFunction()" id="regist-but">Создать аккаунт</button>
            </div>
            <div id="regist-form" style="display:none">
                <form asp-action="Register" asp-controller="Account" method="post">
                    <div class="input2">
                        <div class="form-group">
                            <input asp-for="RegisterViewModel.Email" class="form-control" placeholder="Email" required/>
                        </div>
                        <div class="regist-show-pass1">
                            <input type="password" asp-for="RegisterViewModel.Password" class="form-control" placeholder="Password" id="pass2" required minlength="6"/>
                            <i class="fa fa-eye showpwd" onClick="showPwd('pass2', this)">   </i>
                        </div>
                        <div class="regist-show-pass2">
                            <input type="password" asp-for="RegisterViewModel.PasswordConfirm" class="form-control" placeholder="Confirm Password" id="pass3" required minlength="6"/>
                            <i class="fa fa-eye showpwd" onClick="showPwd('pass3', this)">   </i>
                        </div>
                        <input type="submit" value="Создать аккаунт" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("ForgotPassword")
</div>
<style>
    body {
        background: linear-gradient(to right, white 50%, #e9e9e9 50%);
    }
    .input1 input:required:focus:valid {
        background: no-repeat 95% 50% lightgreen;
        background-size: 25px;
    }

    .input1 input:focus:invalid {
        background: no-repeat 95% 50% lightsalmon;
        background-size: 25px;
    }

    .input2 input:required:focus:valid {
        background: no-repeat 95% 50% lightgreen;
        background-size: 25px;
    }

    .input2 input:required:focus:invalid {
        background: no-repeat 95% 50% lightsalmon;
        background-size: 25px;
    }

</style>
<script>
    var password = document.getElementById('pass2'),
        confirm_password = document.getElementById('pass3');

    function validatePassword() {
        if (password.value !== confirm_password.value) {
            confirm_password.setCustomValidity("Passwords Don't Match");
        } else {
            confirm_password.setCustomValidity('');
        }
    }
    password.oninput = validatePassword;
    confirm_password.oninput = validatePassword;
</script>
