@model CroppShop.Models.AdditionalModel.AdminViewModel

<div id="regist-admin-form" class="modal">
    <span onclick="document.getElementById('regist-admin-form').style.display='none'" class="close" title="Close Modal">&times;</span>
    <form asp-controller="Account" asp-action="RegisterAdmin" class="modal-content">
        <div class="input1">
            <div class="register-admin-container">
                <h1>Register Admin</h1>
                <div class="col">
                    <div class="form-group">
                        <input type="text" asp-for="AdminRegisterViewModel.Email" placeholder="Електронна пошта" name="Email" required />
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="AdminRegisterViewModel.Surname" placeholder="Фамилия" name="Surname" required />
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="AdminRegisterViewModel.Name" placeholder="Имя" name="Name" required />
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="AdminRegisterViewModel.Password" name="Password" placeholder="Пароль" id="adminpass" required />
                        <i class="fa fa-eye showpwd" onClick="showPwd('adminpass', this)">   </i>
                    </div>
                    <input type="submit" value="Register">
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/js/login.js"></script>
<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    .cancelbtn {
        padding: 14px 20px;
        background-color: #f44336;
    }

    .cancelbtn {
        float: left;
        width: 50%;
    }
    

    .register-admin-container {
        padding: 16px;
    }

    .register-admin-container h1 {
        position: center;
        text-align: center;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(80,90,100,0.6);
        padding-top: 50px;
    }

    .modal-content {
        background-color: #fefefe;
        margin: 5% auto 15% auto;
        border: 1px solid #888;
        width: 40%;
        height: auto;
    }


    .close {
        position: absolute;
        right: 35px;
        top: 15px;
        font-size: 40px;
        font-weight: bold;
        color: #f1f1f1;
    }

        .close:hover,
        .close:focus {
            color: #f44336;
            cursor: pointer;
        }

    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    }
    .form-group i {
        position: absolute;
        padding-top: 25px;
        margin-left: -30px;
    }
    .register-admin-container .col {
        margin-left: 30%;
        width: 70%;
        justify-content: center;
        align-items: center;
    }
    .register-admin-container input,
    .btn {
        background-color: #D0D0D0;
        padding: 12px;
        border: none;
        border-radius: 4px;
        margin: 5px 0;
        opacity: 0.85;
        display: inline-block;
        font-size: 19px;
        line-height: 20px;
        text-decoration: none;
        height: 60px;
        width: 60%;
        justify-content: center;
        align-items: center;
        border-radius:0;
    }


        .register-admin-container input[type=submit] {
            border: 4px solid black;
            background-color: black;
            color: white;
            cursor: pointer;
            width: 60%;
        }

            .register-admin-container input[type=submit]:hover {
                background-color: white;
                color: black;
                text-align: center;
                width: 60%;
            }
</style>